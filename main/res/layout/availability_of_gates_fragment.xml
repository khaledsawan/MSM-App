<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf8f9"
    android:padding="8dp"
    android:layout_margin="8dp"
    style="@style/CardView"

    tools:context=".ui.UI_Customer_Visitor.Availability_Of_Gates.Availability_Of_Gates_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grayf8f9"
        android:layout_gravity="start"
        >

        <TextView
            android:id="@+id/aog_tv_mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray8383"
            android:background="@color/grayf8f9"
            android:text="@string/aog_tv_mainText_text"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/aog_et_Number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_land_line"
            android:drawableLeft="@drawable/ic_land_line"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/gray8383"
            android:layout_marginTop="25dp"
         />

        <Button
            android:id="@+id/aog_btn_Check_Up"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/aog_btn_check_up_text"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textSize="@dimen/Medium_Text"
            android:textStyle="italic"
            app:cornerRadius="25dp" />
    </LinearLayout>

</FrameLayout>