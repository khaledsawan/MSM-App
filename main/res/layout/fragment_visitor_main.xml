<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.UI_Customer_Visitor.VisiorUI_Main.Visitor_Main_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="٠dp"
        tools:layout_editor_absoluteY="٠dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_av_adsl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/internet"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/avilibilty_adsl"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="25dp"/>

            <Button
                android:id="@+id/btn_center_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:drawableRight="@drawable/location"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/Bill_Payment_Centers"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="25dp"/>

            <Button
                android:id="@+id/btn_myservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:drawableRight="@drawable/service_img"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/services"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="25dp"/>

            <Button
                android:id="@+id/btn_offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"

                android:drawableRight="@drawable/offer"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/Offers_and_advertisements"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_shape"
                android:layout_margin="25dp"/>

            <Button
                android:id="@+id/btn_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:drawableRight="@drawable/add_user"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/Register_a_subscription_request"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="25dp"/>

            <Button
                android:id="@+id/btn_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:drawableRight="@drawable/customer_service"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/Live_Support"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="25dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>