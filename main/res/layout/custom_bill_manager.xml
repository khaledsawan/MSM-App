<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:padding="8dp"
    android:layout_margin="8dp"
    style="@style/CardView"
    android:background="@drawable/et_shape">

    <TextView
        android:id="@+id/cbm_invoice_issue_date_tv"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/invoice_issue_date"
        android:textStyle="bold"
        android:textSize="@dimen/Medium_Text"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:shadowRadius="@integer/material_motion_duration_short_1"
        android:shadowColor="@color/orange"
        android:outlineSpotShadowColor="@color/orange"
        android:outlineAmbientShadowColor="@color/orange"
        android:textColor="@color/orange"/>

    <TextView
        android:id="@+id/cbm_invoice_value_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invoice_value"
        style="@style/CardView"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/Medium_Text"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/cbm_email_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:gravity="start"
        style="@style/CardView"
        android:textStyle="bold"
        android:textSize="@dimen/Medium_Text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/cbm_serial_number_tv"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="start"
        android:text="@string/serial_numberwithcotation"
        android:textSize="@dimen/Medium_Text"
        android:textStyle="italic"
        android:visibility="visible"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColor="@color/black"/>
</LinearLayout>