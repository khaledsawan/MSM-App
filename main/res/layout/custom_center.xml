<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:baselineAligned="false"
android:orientation="vertical"
android:padding="8dp"
android:layout_margin="8dp"
android:background="@drawable/et_shape"
style="@style/CardView">

<TextView
    android:padding="8dp"
    android:layout_margin="4dp"
    android:id="@+id/center_fragment_email_et"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:drawablePadding="8dp"
    android:text="@string/email"
    app:drawableLeftCompat="@drawable/email_124"
    app:drawableStartCompat="@drawable/email_124" />

<TextView
    android:padding="4dp"
    android:layout_margin="4dp"
    android:id="@+id/center_fragment_password_et"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/password"
    android:gravity="center_vertical"
    android:drawablePadding="8dp"
    app:drawableLeftCompat="@drawable/password_124"
    app:drawableStartCompat="@drawable/password_124" />

<TextView
    android:padding="4dp"
    android:layout_margin="4dp"
    android:id="@+id/center_fragment_location_et"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Location"
    android:gravity="center_vertical"
    android:drawablePadding="8dp"
    android:elevation="24dp"
    app:drawableStartCompat="@drawable/location_124"
    app:drawableLeftCompat="@drawable/location_124" />
</LinearLayout>