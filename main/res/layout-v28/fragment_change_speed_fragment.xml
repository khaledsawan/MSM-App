<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="8dp"
    style="@style/CardView"
    tools:context=".ui.UI_Customer_Visitor.Change_Speed.Change_Speed_Fragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/please_choose_the_new_speed_and_then_press_confirm_and_your_request_will_be_reviewed_as_soon_as_possible"
        android:textSize="@dimen/Medium_Text"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cs_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cs_btn_OK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

<Button
    android:id="@+id/cs_btn_OK"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:paddingTop="8dp"
    android:layout_margin="8dp"
    android:text="@string/button"
    android:background="@drawable/et_shape"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>