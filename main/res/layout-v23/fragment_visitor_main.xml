<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.UI_Customer_Visitor.VisiorUI_Main.Visitor_Main_Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="٠dp"
        tools:layout_editor_absoluteY="٠dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_av_adsl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/avilibilty_adsl"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="20dp"
                app:backgroundTint="@null"
                android:textColor="@color/orange"
                android:drawableEnd="@drawable/ic_availability_of_gates"
               />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_center_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@null"
                android:drawableEnd="@drawable/ic_bill_payment_centers"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/Bill_Payment_Centers"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="20dp"/>
            <Button
                android:id="@+id/btn_myservice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:backgroundTint="@null"
                android:drawableEnd="@drawable/ic_my_services"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/services"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="20dp"
                />
            <Button
                app:backgroundTint="@null"
                android:id="@+id/btn_offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableEnd="@drawable/ic_offers_and_advertisements"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:textColor="@color/orange"
                android:text="@string/Offers_and_advertisements"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="20dp"
               />
            <Button
                android:id="@+id/btn_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableEnd="@drawable/ic_register_a_subscription_request"
                android:drawableTint="#F8F7F7"
                android:textColor="@color/orange"
                android:drawableTintMode="multiply"
                android:text="@string/Register_a_subscription_request"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="20dp"
                app:backgroundTint="@null"/>
            <Button
                android:id="@+id/btn_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/orange"
                android:drawableEnd="@drawable/ic_live_support"
                android:drawableTint="#F8F7F7"
                android:drawableTintMode="multiply"
                android:text="@string/Live_Support"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/shape_for_btn"
                android:layout_margin="20dp"
                app:backgroundTint="@null"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>